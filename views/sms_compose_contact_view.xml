<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_smslink" model="ir.ui.view">
        <field name="name">res.partner.form.smslink</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='mobile']" position="after">
                <button name="action_open_contact_sms_wizard" 
                        type="object" 
                        icon="fa-paper-plane" 
                        title="Trimite via SMSLink"
                        class="btn-link"
                        invisible="not mobile"/>
            </xpath>
        </field>
    </record>
</odoo>
