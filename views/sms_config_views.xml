<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view pentru configurație -->
    <record id="view_sms_link_config_form" model="ir.ui.view">
        <field name="name">sms.link.config.form</field>
        <field name="model">sms.link.config</field>
        <field name="arch" type="xml">
            <form string="SMSLink Configuration">
                <header>
                    <button name="check_credit" type="object" string="Check Credit" class="btn-primary"/>
                    <button name="send_test_sms" type="object" string="Send Test SMS" class="btn-secondary"/>
                    <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="connection_id"/>
                            <field name="password" password="true"/>
                            <field name="sender"/>
                            <field name="use_ssl"/>
                        </group>
                        <group>
                            <field name="credit" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            <field name="last_check"/>
                            <label for="test_phone"/>
                            <div class="o_row">
                                <field name="test_phone" placeholder="07xxxxxxxx"/>
                                <field name="test_message" placeholder="Test message..."/>
                                <button name="action_send_test" type="object" string="Send" class="btn-primary"/>
                            </div>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Tree view pentru configurație -->
    <record id="view_sms_link_config_list" model="ir.ui.view">
        <field name="name">sms.link.config.list</field>
        <field name="model">sms.link.config</field>
        <field name="arch" type="xml">
            <list string="SMSLink Configurations">
                <field name="connection_id"/>
                <field name="sender"/>
                <field name="credit"/>
                <field name="last_check"/>
                <field name="active"/>
            </list>
        </field>
    </record>
    
    <!-- Acțiuni pentru configurație -->
    <record id="action_sms_link_config" model="ir.actions.act_window">
        <field name="name">SMSLink Configurations</field>
        <field name="res_model">sms.link.config</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Configure your SMSLink connection
            </p>
            <p>
                Get your Connection ID and Password from 
                <a href="https://www.smslink.ro/get-api-key/" target="_blank">SMSLink.ro</a>
            </p>
        </field>
    </record>
</odoo>