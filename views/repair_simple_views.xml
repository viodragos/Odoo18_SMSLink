<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- O SINGURĂ moștenire SIMPLĂ - CORECTAT pentru Odoo 18 -->
    <record id="view_repair_order_form_simple_sms" model="ir.ui.view">
        <field name="name">repair.order.form.simple.sms</field>
        <field name="model">repair.order</field>
        <field name="inherit_id" ref="repair.view_repair_order_form"/>
        <field name="arch" type="xml">
            
            <!-- DOAR 2 butoane în header - FĂRĂ ATTRS PE BUTON -->
            <xpath expr="//header" position="inside">
                <button name="action_send_start_sms_simple" 
                        type="object"
                        string="SMS Start"
                        class="btn-primary"
                        icon="fa-play"
                        invisible="state != 'under_repair'"/>
                
                <button name="action_send_done_sms_simple" 
                        type="object"
                        string="SMS Done"
                        class="btn-success"
                        icon="fa-check"
                        invisible="state != 'done'"/>
            </xpath>
            
            <!-- DOAR un câmp counter -->
            <xpath expr="//field[@name='product_id']" position="after">
                <field name="sms_sent_count" readonly="1"/>
            </xpath>
            
        </field>
    </record>
</odoo>
