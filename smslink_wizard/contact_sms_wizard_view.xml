<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_contact_sms_wizard_form" model="ir.ui.view">
        <field name="name">contact.sms.wizard.form</field>
        <field name="model">contact.sms.wizard</field>
        <field name="arch" type="xml">
            <form string="Trimite SMS prin SMSLink">
                <sheet>
                    <group>
                        <field name="partner_id" invisible="1"/>
                        <field name="mobile" widget="phone"/>
                        <field name="body" widget="text" placeholder="Scrie mesajul aici..."/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_send_sms" 
                            string="Trimite SMS" 
                            type="object" 
                            class="btn-primary" 
                            data-hotkey="q"/>
                    <button string="AnuleazÄƒ" 
                            class="btn-secondary" 
                            special="cancel" 
                            data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>