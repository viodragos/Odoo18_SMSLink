<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Job cron pentru verificarea periodicÄƒ a creditului -->
    <record id="cron_check_smslink_credit" model="ir.cron">
        <field name="name">Check SMSLink Credit Daily</field>
        <field name="model_id" ref="model_sms_link_config"/>
        <field name="state">code</field>
        <field name="code">model.check_credit()</field>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
        <field name="doall" eval="False"/>
        <field name="active" eval="True"/>
    </record>
</odoo>
